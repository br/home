#!/bin/bash

#/ NAME
#/     local-helper -- resets environment for another bundle exec
#/
#/ SYNOPSIS
#/     
#/     local-helper command args ...

# figure out the project root under which bin, lib live
shome="$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"

# load a jason bourne library
source "$shome/bin/_treadstone"

# entry point
function main {
  unset GEM_HOME BUNDLE_GEMFILE RUBYOPT

  local app_ruby=""
  if [[ "$FLAGS_app_ruby" = "$FLAGS_TRUE" ]]; then
    PATH="$HOME/.rvm/bin:/usr/local/rvm/bin:$PATH"
    app_ruby="rvm-exec $(ryaml $shome/config/deploy.yml app_ruby)"
  fi

  $app_ruby bundle check 2>&1 >/dev/null || { bundle install --quiet --local --path vendor/bundle || bundle check > /dev/null; }
  exec $app_ruby bundle exec "$@"
}

# define command line options:
#   var name, default, description, short option
DEFINE_boolean app_ruby "$FLAGS_TRUE" "Run under the app ruby for this app?" "A"

# parse the command-line
parse_command_line "$@" || exit $?
eval set -- "${FLAGS_ARGV}"

# pass arguments to entry point
main "$@"
