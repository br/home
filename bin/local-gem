#!/bin/bash

#/ NAME
#/     local-gem -- set environment to hint to Gemfile to use a local gemspec
#/
#/ SYNOPSIS
#/     local-gem [gem...]

# figure out the project root under which bin, lib live
shome="$(cd -P -- "$(dirname -- "$0")/.." && pwd -P)"

# load a meat library
source "$shome/bin/_prime" "$@"

# entry point
function main {
  local nm_gem

  for nm_gem in "$@"; do
    if [[ ! -d "gems/${nm_gem}" ]]; then
      logger_fatal "cannot find local gemspec at gems/${nm_gem}"
      exit 1
    fi
    export "local_${nm_gem}"=1
  done

  bundle --local --quiet &&  bundle check
  bash -l || true
  for nm_gem in "$@"; do
    unset "local_${nm_gem}"
  done
  bundle --local --quiet &&  bundle check
  git status -s
  bundle update "$@"
  git add Gemfile.lock vendor/cache
  git add -u vendor/cache
  git status -s
}

# define command line options:
#   var name, default, description, short option

# parse the command-line
parse_command_line "$@" || exit $?
eval set -- "${FLAGS_ARGV}"

if [[ "$#" = 0 ]]; then
  logger_fatal "missing gem name"
  display_help
  exit 1
fi

# pass arguments to entry point
main "$@"

