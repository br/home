#!/bin/bash -e

bundle check 2>&1 >/dev/null || { bundle install --local --path vendor/bundle || bundle check; }

if [[ -n $1 ]]; then
  default_pod=$(cat /etc/podname 2>&- || true)
  set $(for a in "$@"; do if [[ $default_pod = $a ]]; then echo "default"; else echo $a; fi; done)
fi
echo "---"
bundle exec alpha_omega $(basename $0) "$@" | egrep -v '^--- *$'
