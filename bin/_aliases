function reload {
  pushd ~ > /dev/null
  source "$HOME/.bash_profile"
  popd > /dev/null
}

function update {
  pushd ~ > /dev/null
  git update origin master
  git owner master
  git push -u origin master
  bundle --local
  reload
  reload
  popd ~ > /dev/null
}

alias poop='/System/Library/CoreServices/"Menu Extras"/User.menu/Contents/Resources/CGSession -suspend'

function vcat {
  $shome/bin/vcat "$@"
}
