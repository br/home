#!/bin/bash

#/ NAME
#/     bundle-ruby -- bundle release with bundler and rvm
#/
#/ SYNOPSIS
#/     
#/     bundle-ruby ruby_loader ruby without_bundler_group


# figure out the project root under which bin, lib live
shome="$(cd -P -- "$(dirname -- "$0")/.." && pwd -P)"

# load a meat library
source "$shome/bin/_prime" "$@"

# entry point
function main {
  if [[ "$#" != 3 ]]; then
    logger_fatal "missing arguments"
    display_help
    exit 1
  fi

  local pth_loader="$1"; shift
  local ver_ruby="$1"; shift
  local without_groups="$1"; shift
  
  if ! $pth_loader $ver_ruby bundle check 2>&1 > /dev/null; then
    $pth_loader $ver_ruby bundle install --quiet --local --deployment --without "$without_groups"
    $pth_loader $ver_ruby bundle check > /dev/null
  fi
}

# define command line options:
#   var name, default, description, short option

# parse the command-line
parse_command_line "$@" || exit $?
eval set -- "${FLAGS_ARGV}"

# pass arguments to entry point
main "$@"
