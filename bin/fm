#!/bin/bash -e

export RTFM_REPOS="$(ls -d ~/work/*/* | sed "s#$HOME#~#")"

bundle check 2>&1 > /dev/null || { bundle install --local --path vendor/bundle || bundle check; }

if [[ -n $1 ]]; then
  app=$1; shift
  exec bundle exec foreman start -f Procfile.rb -m 0 -c $app=1
else
  exec bundle exec foreman start -f Procfile.rb
fi
