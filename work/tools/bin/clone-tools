#!/bin/bash

git clone git@github.com:HeSYINUvSBZfxqA/RTFMd       rtfmd       
git clone git@github.com:HeSYINUvSBZfxqA/shocco      shocco
git clone git@github.com:HeSYINUvSBZfxqA/ronn        ronn

git clone git@github.com:HeSYINUvSBZfxqA/alpha_omega alpha_omega 
git clone git@github.com:HeSYINUvSBZfxqA/microwave   microwave   

git clone git@github.com:HeSYINUvSBZfxqA/ao-helper   ao-helper
git clone git@github.com:HeSYINUvSBZfxqA/rb-helper   rb-helper
git clone git@github.com:HeSYINUvSBZfxqA/gh-helper   gh-helper

git clone git@github.com:HeSYINUvSBZfxqA/meat        meat

git clone git@github.com:HeSYINUvSBZfxqA/tvdinner    tvdinner
for a in tvd-bundler tvd-git tvd-microwave tvd-rubygems tvd-ssh; do
  git clone git@github.com:HeSYINUvSBZfxqA/$a        $a
done

git clone git@github.com:HeSYINUvSBZfxqA/veewee      HeSYINUvSBZfxqA-veewee

for a in *; do
  if [[ -d $a/.git ]]; then
    pushd $a
    git pull
    git submodule update --init --recursive
    bundle --local
    popd
  fi
done

